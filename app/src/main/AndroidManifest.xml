<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thevarunshah.swotanalysistool"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/swot"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        >
        <activity
            android:name="com.thevarunshah.swotanalysistool.HomeScreen"
            android:theme="@style/AppBaseTheme"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thevarunshah.swotanalysistool.SWOTScreen"
            android:theme="@style/AppBaseTheme"
            >
        </activity>
        <activity
            android:name="com.thevarunshah.swotanalysistool.AboutScreen"
            android:theme="@style/AppBaseTheme"
            >
        </activity>
        <activity
            android:name="com.thevarunshah.swotanalysistool.SavedSWOTsScreen"
            android:label="@string/app_name"
            android:theme="@style/AppBaseTheme"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.thevarunshah.swotanalysistool.HomeScreen" />
        </activity>
    </application>

</manifest>
